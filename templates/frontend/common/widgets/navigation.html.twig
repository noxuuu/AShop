                <li>
                    <a href="{{ path('admin_usersServices') }}">
                        <i class="iconsmind-Coins"></i> Usługi użytkowników
                    </a>
                </li>
                <li>
                    <a href="{{ path('admin_stats') }}">
                        <i class="simple-icon-chart"></i> Statystyki
