{% extends 'frontend/common/index.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12 list">
            {% for log in pagination %}
                <div class="card flex-row mb-3 active">
                    <div class="pl-2 d-flex flex-grow-1 min-width-zero">
                        <div class="card-body align-self-center d-flex flex-column flex-lg-row justify-content-between min-width-zero align-items-lg-center">
                            <div class="w-15"><span class="badge badge-pill badge-primary mb-1">#{{ log.getId() }}</span></div>
                            <p class="list-item-heading w-15 mb-1">
                                {% if log.getPaymentType() == 1 %}
                                <span class="label label-success">Admin</span>
                                {% elseif log.getPaymentType() == 2 %}
                                    <span class="label label-success">SMS</span>
                                {% elseif log.getPaymentType() == 3 %}
                                    <span class="label label-success">PaySafeCard</span>
                                {% elseif log.getPaymentType() == 4 %}
                                    <span class="label label-success">Przelew</span>
                                {% elseif log.getPaymentType() == 5 %}
                                    <span class="label label-success">Portfel</span>
                                {% elseif log.getPaymentType() == 6 %}
                                    <span class="label label-success">Voucher</span>
                                {% endif %}
                            </p>
                            <div class="w-15 w-sm-50">
                                {% if log.getUserId() %}
                                    <span style="{{ log.getUserId().getGroupId().getStyle() }}">{{ log.getUserId().getUsername() }}</span>
                                {% else %}
                                    Brak
                                {% endif %}
                            </div>
                            <p class="mb-1 w-20 w-sm-50"><span class="badge badge-pill badge-secondary mb-1">{{ log.getServerId().getName() }}</span></p>
                            <p class="mb-1 w-15 w-sm-50"><span class="badge badge-pill badge-secondary mb-1">{{ log.getServiceId().getName() }}</span></p>
                            <p class="mb-1 w-15 w-sm-50">{{ log.getValue() }}</p>
                            <p class="mb-1 w-15 w-sm-50"><span class="label label-warning">{{ log.getAuthData() }}</span></p>
                            <p class="mb-1 w-15 w-sm-50"><span class="badge badge-pill badge-info mb-1">{{ log.getUserIp() }}</span></p>
                            <div class="w-15 w-sm-100">
                                <span class="label label-success">{{ log.getDate()|date("d/m/Y H:i:s") }}</span>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}

            <!-- paginate -->
            {{ knp_pagination_render(pagination, 'frontend/common/widgets/pagination.html.twig') }}
        </div>
    </div>
{% endblock %}