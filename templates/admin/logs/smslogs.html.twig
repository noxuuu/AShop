{% extends 'frontend/admin/base.html.twig' %}

{% block title %}Logi Płatności SMS{% endblock %}

{% block body %}
    <div class="container-fluid">
        <!-- Title -->
        <div class="row heading-bg  bg-blue">
            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                <h5 class="txt-light">Logi Płatności SMS</h5>
            </div>

        </div>
        <!-- /Title -->
        <!-- Row -->
        <div class="row">
            <div class="col-sm-12">
                <div class="panel panel-default card-view">
                    <div class="panel-heading">
                        <div class="pull-left">
                            <h6 class="panel-title txt-dark">Logi Płatności SMS</h6>
                        </div>
                        <div class="clearfix"></div >
                    </div>
                    <div class="panel-wrapper collapse in">
                        <div class="panel-body">
                            <div class="table-wrap">
                                <div class="table-responsive">
                                    <table class="table display product-overview mb-30" id="support_table">
                                        <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Metoda Płatności</th>
                                            <th>Kod zwrotny</th>
                                            <th>Numer</th>
                                            <th>Przychód</th>
                                            <th>Koszt</th>
                                            <th>IP</th>
                                            <th>Platforma</th>
                                            <th>Data</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                            {% for log in pagination %}
                                                <tr>
                                                    <td>{{ log.getId() }}</td>
                                                    <td>
                                                        <span class="label label-success">{{ log.getPaymentMethodId().getName() }}</span>
                                                    </td>
                                                    <td>
                                                        <span class="label label-warning">{{ log.getCode() }}</span>
                                                    </td>
                                                    <td>
                                                        {{ log.getNumber() }}
                                                    </td>
                                                    <td>
                                                        {{ log.getIncome() }}
                                                    </td>
                                                    <td>
                                                        {{ log.getCost() }}
                                                    </td>
                                                    <td>
                                                        <span class="label label-success">{{ log.getIp() }}</span>
                                                    </td>
                                                    <td>
                                                        {% if log.getPlatform() == "server" %}
                                                            Serwer gry
                                                        {% elseif log.getPlatform() == "www" %}
                                                            Strona sklepu
                                                        {% endif %}
                                                    </td>
                                                    <td>
                                                        <span class="label label-success">{{ log.getDate()|date("d/m/Y H:i:s") }}</span>
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <div class="row">
                            <div class="col col-xs-4"><br/><br/>Strona {{ pagination.currentPageNumber }} z {{ (pagination.getTotalItemCount/30)|round(0, 'ceil') }}, {{ pagination.getTotalItemCount }} wyników ogółem.</div>
                            <div class="col col-xs-8">
                                <ul class="pagination hidden-xs pull-right">
                                    <div class="navigation">
                                        {{ knp_pagination_render(pagination) }}
                                    </div>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascript %}{% endblock %}