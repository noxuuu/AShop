{% block modal_add %}
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Dodaj nową uslugę</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
        </button>
    </div>
    {{ form_start(form_add) }}
    <div class="modal-body">
        <div class="form-group">
            <label>NAZWA:</label>
            {{ form_widget(form_add.name) }}
        </div>
        <div class="form-group">
            <label>
                OPIS (Strona)<br/>
                <span class="help-block">✔ HTML Enabled</span>
            </label>
            {{ form_widget(form_add.webDescription) }}
        </div>
        <div class="form-group">
            <label>
                OPIS (Serwer)<br/>
                <span class="help-block">✔ Menu Item</span>
            </label>
            {{ form_widget(form_add.serverDescription) }}
        </div>
        <div class="form-group">
            <label>Obrazek:</label>
            {{ form_widget(form_add.imageUrl) }}
        </div>
        <div class="form-group">
            <label>Sufix:</label>
            {{ form_widget(form_add.sufix, {'value' : 'dni' }) }}
        </div>
        <div class="form-group">
            <label>Typ:</label>
            {{ form_widget(form_add.type) }}
        </div>

        <div class="form-group">
            <label>Kolejność:</label>
            {{ form_widget(form_add.orderNumber, {'value' : pagination.getTotalItemCount+1 }) }}
        </div>
        <div class="form-group">
            <label>Skadnia zapytania (flagi/api/minecraft)</label>
            {{ form_widget(form_add.flags) }}
            <span class="help-block">
                <a href="#" target="_blank">Dostępne flagi</a> | <a href="#" target="_blank">Dokumentacja API</a><br/>
                <a href="#" target="_blank">Składnia zapytania Minecraft</a>
            </span>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-outline-primary" data-dismiss="modal">Anulu</button>
        <button type="submit" class="btn btn-primary">Dodaj</button>
    </div>
    {{ form_end(form_add) }}
{% endblock %}

{% block javascripts %}
        <script>
        function confirmDelete(service) {
            swal({
                    title: "Jesteś pewien?",
                    text: "Tej operacji nie będzie można cofnąć!",
                    type: "warning",
                    showCancelButton: true,
                    showLoaderOnConfirm: true,
                    confirmButtonClass: "btn-primary",
                    cancelButtonClass: "btn-outline-primary",
                    confirmButtonText: "Tak, usuń!",
                    cancelButtonText: "Anuluj",
                    closeOnConfirm: false
                },
                function(){
                    $.ajax({
                        url:        '/admin/services/delete/' + service + '/',
                        type:       'GET',
                        dataType:   'json',
                        async:      true,

                        success: function(data, status) {
                            if(data[1]){
                                swal("Usunięto!", "Poprawnie usunięto usługę " + data[0] + ".", "success");
                                $('#service-' + service).hide();
                            }
                        },
                        error : function(xhr, textStatus, errorThrown) {
                            swal("Błąd", "Wystąpił niespodziewany błąd, skontaktuj się z administratorem.", "error");
                        }
                    });
                });
        }
    </script>
{% endblock %}