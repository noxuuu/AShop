        <div class="col-12 list">

            {% for service in pagination %}
                <div class="card flex-row mb-3 active" id="service-{{ service.GetId() }}">
                    <div class="pl-2 d-flex flex-grow-1 min-width-zero">
                        <div class="card-body align-self-center d-flex flex-column flex-lg-row justify-content-between min-width-zero align-items-lg-center">
                            <div class="w-5"></div>
                            <p class="list-item-heading mb-1 w-25">{{ service.GetName() }}</p>
                            <div class="w-15 w-sm-50">
                                {% if service.GetType() == 1 %}
                                    <span class="badge badge-pill badge-primary">Flagi</span>
                                {% elseif service.GetType() == 2 %}
                                    <span class="badge badge-pill badge-primary">MySQL</span>
                                {% elseif service.GetType() == 3 %}
                                    <span class="badge badge-pill badge-primary">Zapytanie Minecraft</span>
                                {% elseif service.GetType() == 4 %}
                                    <span class="badge badge-pill badge-primary">Inne</span>
                                {% endif %}
                            </div>
                            <p class="mb-1 text-muted text-small w-15 w-sm-50">{{ service.getServerDescription() }}</p>
                            <div class="w-15 w-sm-100">
                                <button type="button" class="btn btn-primary btn-sm mr-1">Edytuj</button>
                                <button type="button" onclick="confirmDelete({{ service.GetId() }})" class="btn btn-primary btn-sm mr-1">Usuń</button>
                            </div>
                        </div>
                    </div>
                </div>
