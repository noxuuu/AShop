{% extends 'frontend/common/index.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12 list">

            {% for server in pagination %}
                <div class="card flex-row mb-3 active" id="server-{{ server.GetId() }}">
                    <div class="pl-2 d-flex flex-grow-1 min-width-zero">
                        <div class="card-body align-self-center d-flex flex-column flex-lg-row justify-content-between min-width-zero align-items-lg-center">
                            <div class="w-15">
                                <span class="badge badge-pill badge-primary mb-1">#{{ server.getId() }}</span>
                            </div>
                            <p class="list-item-heading mb-1 w-25">{{ server.GetName() }}</p>
                            <div class="w-15 w-sm-50">
                                <span class="badge badge-pill badge-primary">
                                    {{ server.getIpAddress() }}:{{ server.getPort() }}
                                </span>
                            </div>
                            <p class="mb-1 w-15 w-sm-50">
                                <span class="badge badge-pill badge-secondary">
                                    {% if server.getType() == 1 %}
                                        CS:G0
                                    {% elseif server.getType() == 2 %}
                                        Counter Strike
                                    {% elseif server.getType() == 3 %}
                                        Minecraft
                                    {% endif %}
                                </span>
                            </p>
                            <div class="w-15 w-sm-50 mb-1">
                                {% if server.getConnected() %}
                                    <span class="badge badge-pill badge-secondary">Połączony</span>
                                {% else %}
                                    <span class="badge badge-pill badge-primary">Offline</span>
                                {% endif %}
                            </div>
                            <div class="w-15 w-sm-100">
                                <button type="button" data-toggle="modal" data-target="#edit-{{ server.GetId() }}" class="btn btn-primary btn-sm mr-1">Edytuj</button>
                                <button type="button" onclick="confirmDelete({{ server.GetId() }})" class="btn btn-primary btn-sm mr-1">Usuń</button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Modal -->
                <div class="modal fade modal-right" id="edit-{{ server.GetId() }}" tabindex="-1" role="dialog" aria-labelledby="edit-{{ server.GetId() }}" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="edit-{{ server.GetId() }}">Edycja serwera {{ server.GetName() }}</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">×</span>
                                </button>
                            </div>
                            {% set edit_form = form_edit.createView %}
                            {{ form_start(edit_form, { 'method' : 'post', 'action': path('edit_server', { 'server' : server.GetId() })}) }}
                                <div class="modal-body">
                                    <div class="form-group">
                                        <label>Nazwa:</label>
                                        {{ form_row(edit_form.name, {'value' : server.GetName()}) }}
                                    </div>
                                    <div class="form-group">
                                        <label>Adres IP:</label>
                                        {{ form_row(edit_form.ipAddress, {'value' : server.getIpAddress()}) }}
                                    </div>
                                    <div class="form-group">
                                        <label>Port:</label>
                                        {{ form_row(edit_form.port, {'value' : server.GetPort()}) }}
                                    </div>
                                    <div class="form-group">
                                        <label>Hasło RCON (Wymagane do usług bazujących na API):</label>
                                        {{ form_row(edit_form.rconPassword, {'value' : server.GetRconPassword()}) }}
                                    </div>
                                    <div class="form-group">
                                        <label>Typ serwera:</label>
                                        {{ form_widget(edit_form.type, {'data' : server.GetType() }) }}
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="submit" class="btn btn-primary">Zapisz</button>
                                    <button type="button" class="btn btn-outline-primary" data-dismiss="modal">Anuluj</button>
                                </div>
                            {{ form_end(edit_form) }}
                        </div>
                    </div>
                </div>
            {% endfor %}

            <!-- paginate -->
            {{ knp_pagination_render(pagination, 'frontend/common/widgets/pagination.html.twig') }}
        </div>
    </div>
{% endblock %}

{% block modal_add %}
    <div class="modal-header">
        <h5 class="modal-title">Dodaj nowy serwer</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
        </button>
    </div>
    {{ form_start(form_add) }}
        <div class="modal-body">
            <div class="form-group">
                <label>Nazwa:</label>
                {{ form_widget(form_add.name) }}
            </div>
            <div class="form-group">
                <label>Adres IP:</label>
                {{ form_widget(form_add.ipAddress) }}
            </div>
            <div class="form-group">
                <label>Port:</label>
                {{ form_widget(form_add.port) }}
            </div>
            <div class="form-group">
                <label>Hasło RCON (Wymagane do usług bazujących na API):</label>
                {{ form_widget(form_add.rconPassword) }}
            </div>
            <div class="form-group">
                <label>Typ serwera:</label>
                {{ form_widget(form_add.type) }}
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-outline-primary" data-dismiss="modal">Anuluj</button>
            <button type="submit" class="btn btn-primary">Dodaj</button>
        </div>
    {{ form_end(form_add) }}
{% endblock %}

{% block javascripts %}
    <script>
        function confirmDelete(id) {
            swal({
                    title: "Jesteś pewien?",
                    text: "Tej operacji nie będzie można cofnąć!",
                    type: "warning",
                    showCancelButton: true,
                    showLoaderOnConfirm: true,
                    confirmButtonClass: "btn-primary",
                    cancelButtonClass: "btn-outline-primary",
                    confirmButtonText: "Tak, usuń!",
                    cancelButtonText: "Anuluj",
                    closeOnConfirm: false
                },
                function(){
                    $.ajax({
                        url:        '/admin/servers/delete/' + id + '/',
                        type:       'GET',
                        dataType:   'json',
                        async:      true,

                        success: function(data, status) {
                            if(data[1]) {
                                swal("Usunięto!", "Poprawnie usunięto serwer " + data[0] + ".", "success");
                                $('#server-' + id).hide();
                            }
                        },
                        error : function(xhr, textStatus, errorThrown) {
                            swal("Błąd", "Wystąpił niespodziewany błąd, skontaktuj się z administratorem.", "error");
                        }
                    });
                });
        }
    </script>
{% endblock %}