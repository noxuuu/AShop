{% extends 'common/base.html.twig' %}
{% block title %}LOGOWANIE{% endblock %}
{% block bodyclass %}class="background show-spinner"{% endblock %}
{% block body %}
    <div class="fixed-background"></div>
    <main>
        <div class="container">
            <div class="row h-100">
                <div class="col-12 col-md-12 mx-auto my-auto">
                    <div class="card auth-card">
                        <div class="position-relative image-side ">

                        </div>
                        <div class="form-side">
                            <a href="/">
                                <span class="logo-single"></span>
                            </a>

                            <div class="row">
                                <div class="col-md-8">
                                    <h6 class="mb-4">Logowanie</h6>

                                    {% if error %}
                                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                    {% endif %}
                                    <form action="{{ path('login') }}" method="post">
                                        <label class="form-group has-float-label mb-4">
                                            <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" />
                                            <span>Login</span>
                                        </label>

                                        <label class="form-group has-float-label mb-4">
                                            <input class="form-control" type="password" id="password" name="_password" />
                                            <input type="hidden" name="_target_path" value="/" />
                                            <span>Hasło</span>
                                        </label>
                                        <div class="row">
                                            <div class="col-md-8">
                                                <p style="font-size: 7px; text-align: justify; line-height: 1em; padding-top: 7px;">Wyrażam zgodę na przetwarzanie danych osobowych zgodnie z ustawą o ochronie danych osobowych
                                                w związku z obsługą zamówienia internetowego. Podanie danych jest dobrowolne, ale niezbędne do przetworzenia zapytania.</p>
                                            </div>
                                            <div class="col-md-4">
                                                <button class="btn btn-primary btn-lg btn-shadow" style="width: 100%; padding: .75rem 0;" type="submit">ZALOGUJ</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                                <div class="col-md-4 text-center" >
                                    <div style="border-left: 1px #ccc solid; padding-left: 15px;">
                                        <h6 class="mb-4">Inne metody</h6>
                                        <img style="margin-bottom: 5px;" src="https://camo.githubusercontent.com/bc810ec0615dae65aae384e8e9b3cd7a2f5aa208/68747470733a2f2f737465616d636f6d6d756e6974792d612e616b616d616968642e6e65742f7075626c69632f696d616765732f7369676e696e7468726f756768737465616d2f736974735f30322e706e67">
                                        <a href="{{ path('register') }}"><button class="btn btn-secondary btn-lg btn-shadow" style="margin-bottom: 5px; width: 100%; padding: .75rem 0;" type="button">REJESTRACJA</button></a><br />
                                        <a href="#" style="font-size: 9px;">PRZYPOMNIENIE HASŁA</a>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}